/* pages/note/note.wxss */
.section {
  width: 90%;
  height: 100%;
  margin: 5% 5% 5% 5%;
  background: #ffffff;
  border-radius: 2rpx;
}

.cut {
  width: 100%;
  height: 40rpx;
  background: #efeff4;
}

.title_block {
  width: 90%;
  margin-left: 5%;
  height: 100rpx;
  display: flex;
  align-items: center;
  background: #ffffff;
}

.title_icon {
  margin-left: 5%;
  height: 100rpx;
  width: 80rpx;
  background: #1d93ec;
  display: flex;
  justify-content: center;
  align-items: center;
}

.title_icon image {
  width: 50rpx;
  height: 50rpx;
}

.title_block text {
  height: 90rpx;
  margin-left: 5%;
  font-size: 36rpx;
  display: flex;
  align-items: center;
}

.function {
  margin-left: 5%;
  width: 90%;
  height: 100rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.section textarea {
  width: 80%;
  margin: 0 5% 10% 5%;
  padding: 5%;
  font-size: 34rpx;
  color: #333333;
  border-color: #F0F0F0;
  border-style: solid;
  border-width: 2rpx 0 2rpx 0;
}

.photo {
  width: 100rpx;
  height: 50rpx;
  font-size: 30rpx;
  color: #0066b9;
  display: flex;
  justify-content: center;
  align-items: center;
}

.download {
  width: 100rpx;
  height: 50rpx;
  font-size: 30rpx;
  color: #0066b9;
  display: flex;
  justify-content: center;
  align-items: center;
}

.placeholder {
  color: #DCDCDC
}

.note_record_block {
  width: 90%;
  height: 100rpx;
  background: #ffffff;
  margin-left: 5%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom-style: solid;
  border-bottom-color: #efeff4;
  border-bottom-width: 20rpx;
  border-radius: 6rpx;
}

.note_record_block image{
  width: 34rpx;
  height: 34rpx;
}

.note_id {
  margin-left: 5%;
  width: 13%;
  height: 104rpx;
  background: #1d93ec;
  font-size: 36rpx;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  /* border-left: 6rpx solid #1d93ec; */
}

.note_time {
  width: 50%;
  font-size: 32rpx;
  color: #888888;
}

.compile {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.compile text {
  width: 80%;
  height: 90rpx;
  border-radius: 6rpx;
  background: #1d93ec;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}