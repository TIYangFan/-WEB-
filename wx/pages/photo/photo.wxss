/* pages/photo/photo.wxss */
.time {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  position: absolute;
  top: 870rpx;
}

.red_dot {
  width: 20rpx;
  height: 20rpx;
  background: red;
  border-radius: 100%;
  margin-right: 10rpx;
}

.bottom_bar {
  height: 240rpx;
  width: 100%;
  background: black;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.choose_bar {
  height: 50rpx;
  width: 90%;
  margin: 0 5% 0 5%;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.choose_block {
  height: 50rpx;
  width: 100rpx;
  font-size: 30rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.take_photo_block {
  height: 150rpx;
  width: 90%;
  margin: 0 5% 0 5%;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.btn_photo {
  height: 130rpx;
  width: 130rpx;
  background: white;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn_photo image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}

.change_photo {
  height: 80rpx;
  width: 80rpx;
}

.photo_album {
  height: 90rpx;
  width: 90rpx;
}